#!/bin/sh

cat << EOF

# VIM postinstallation tasks.

## Downloading spell files for VIM.

EOF

mkdir -p "$HOME/.vim/spell"
/usr/bin/wget -NP "$HOME/.vim/spell" http://ftp.vim.org/vim/runtime/spell/ru.utf-8.spl
/usr/bin/wget -NP "$HOME/.vim/spell" http://ftp.vim.org/vim/runtime/spell/ru.utf-8.sug

cat << EOF

## Updating go-vim binary dependencies.

EOF

vim +GoInstallBinaries +q

cat << EOF

# Finished VIM postinstallation tasks.

EOF
