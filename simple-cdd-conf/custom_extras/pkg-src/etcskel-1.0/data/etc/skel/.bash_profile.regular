# TNL: custom .bash_profile, invokes .profile and starts X (on the first console).

if [ -f "$HOME/.profile" ]; then
    . "$HOME/.profile"
fi

if [ -f "$HOME/.bash_aliases" ]; then
    . "$HOME/.bash_aliases"
fi

export GPG_TTY=$(tty)
eval "$(lesspipe)"

if [[ ! ${DISPLAY} && ${XDG_VTNR} == 1 ]]; then
    exec startx
fi

